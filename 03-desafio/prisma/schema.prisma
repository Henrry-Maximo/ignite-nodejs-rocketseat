generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  FILHOTE
  ADULTO
  IDOSO
}

enum Size {
  PEQUENINO
  MEDIANO
  GRANDINHO
}

enum Power {
  BAIXA
  MEDIA
  ALTA
}

enum Independence {
  BAIXA
  MEDIA
  ALTA
}

enum Ambience {
  PEQUENO
  AMPLO
}

enum Status {
  Disponível
  Indisponível
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  postal_code   String
  address       String
  phone         String

  @@map("pet_users")
}

model Pet {
  id           String       @id @default(uuid())
  name         String
  description  String
  status       Status
  age          Age
  size         Size
  power        Power
  independence Independence
  ambience     Ambience
  requisite    String
  created_at   DateTime     @default(now())

  @@map("pet_pets")
}

model Org {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  address       String
  postal_code   String
  city          String
  phone         String
  created_at    DateTime @default(now())

  @@map("pet_orgs")
}
