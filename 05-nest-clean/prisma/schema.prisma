generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String

  questions Question[]

  @@map("users")
}

model Question {
  id String @id @default(uuid())
  title String
  slug String @unique
  content String
  createdAt DateTime @default(now()) @map("created_at")
  updateAt DateTime? @updateAt @map("update_at")
  authorId String @map("author_id")

  author User @relation(fields: [authorId], references: [id])
  
  @@map("questions")
}